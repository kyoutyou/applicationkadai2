<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%=@user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
          </tr>
        </tbody>
      </table>
      <div class="row">
          <%= link_to  edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
              <i class="fas fa-user-cog"></i>
          <% end %>
      </div>
      <h2 class="mt-3">New Book</h2>
        <%= form_with model: User.new do |f| %>
        <p>Title</p>
          <%= f.text_field :title %>
        <p>Opinion</p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinipn</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @books.each do |book| %>
                <td><%= book.title %></td>
                <td><%= book.opinipn %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>