<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user,book: @book %>
    </div>    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table class="table tabli-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
              <% @books.each do |book| %>
              <tr>
                
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
    
    